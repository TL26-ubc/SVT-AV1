{
  "version": 6,
  "configurePresets": [
    {
      "name": "ninja-debug",
      "description": "Debug build using Ninja",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/Bin/Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "mac-debug",
      "displayName": "macOS - Debug (Native Clang)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/Bin/Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "environment": {
        "CC": "/usr/bin/clang",
        "CXX": "/usr/bin/clang++"
      }
    }
  ]
}
